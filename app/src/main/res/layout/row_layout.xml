<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_bottom_row">

    <CheckBox
        android:id="@+id/checkBoxListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ImageViewRow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/marginRight"
        android:scaleType="centerCrop"
        android:src="@drawable/userprofile" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/Contact_Name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginRight="@dimen/marginRight"
            android:text="Name: " />

        <TextView
            android:id="@+id/Name_Value_TexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_toRightOf="@id/Contact_Name_TextView"
            android:text="Denis" />

        <TextView
            android:id="@+id/Deadline_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Contact_Name_TextView"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginRight="@dimen/marginRight"
            android:text="Deadline: " />

        <TextView
            android:id="@+id/Deadline_value_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Contact_Name_TextView"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_toRightOf="@+id/Deadline_TextView"
            android:text="10/10/2017" />

        <TextView
            android:id="@+id/OwnedMoney_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Deadline_TextView"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginRight="@dimen/marginRight"
            android:text="OwnedMoney: " />

        <TextView
            android:id="@+id/OwnedMoney_ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Deadline_TextView"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_toRightOf="@+id/OwnedMoney_TextView"
            android:text="3000$" />
    </RelativeLayout>
</LinearLayout>